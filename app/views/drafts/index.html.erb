<table class="table table-hover">
  <thead>
    <tr>
      <th>Recipients</th>
      <th>Topic</th>
      <th>Message</th>
      <th></th>
    </tr>
  </thead>
  <tbody class="table-clickable">
    <% @drafts.each do |draft| %>
      <tr data-link="<%= new_user_message_path(current_user, draft_id: draft.id) %>">
        <td><%= draft.recipient_email %></td>
        <td><%= draft.topic %></td>
        <td><%= truncate(draft.text, length: 100) %></td>
        <td>
          <%= link_to user_draft_path(draft.user, draft), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <i class='fa fa-trash'></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="row justify-content-center">
  <%= will_paginate @drafts %>
</div>
